# ─── App ───────────────────────────────────────────────────────────────────────
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=AIO Pulse

# ─── Database (Prisma) ───────────────────────────────────────────────────────
# For local development with Docker: postgresql://postgres:postgres@localhost:5432/aio_pulse
# For Vercel Postgres: postgres://default:password@ep-xyz.us-east-1.postgres.vercel-storage.com/verceldb
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/aio_pulse

# ─── Redis (BullMQ) ───────────────────────────────────────────────────────────
# For local development with Docker: redis://localhost:6379
# For Vercel/Upstash: redis://default:password@redis-host.upstash.io:6379
REDIS_URL=redis://localhost:6379

# ─── Supabase ──────────────────────────────────────────────────────────────────
# Get from: https://app.supabase.com → your project → Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# ─── AI Services ───────────────────────────────────────────────────────────────
# Google Gemini: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI (for GPT-4 analysis): https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# HuggingFace (for sentiment analysis): https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_token_here

# ─── Payments (Stripe) ─────────────────────────────────────────────────────────
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# ─── Pricing Plans ───────────────────────────────────────────────────────────────
NEXT_PUBLIC_PRICE_PRO_MONTHLY=price_pro_monthly_id
NEXT_PUBLIC_PRICE_PRO_YEARLY=price_pro_yearly_id
NEXT_PUBLIC_PRICE_ENTERPRISE_MONTHLY=price_enterprise_monthly_id

# ─── Email alerts (Resend) ─────────────────────────────────────────────────────
# Get from: https://resend.com → API Keys (free up to 100 emails/day)
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=alerts@yourdomain.com

# ─── Puppeteer/Playwright (Screenshot service) ────────────────────────────────
PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome
PLAYWRIGHT_BROWSERS_PATH=/ms-playwright

# ─── Auth ───────────────────────────────────────────────────────────────────────
# NextAuth.js secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# ─── Rate Limiting ─────────────────────────────────────────────────────────────
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ─── Dev mode (no auth) ────────────────────────────────────────────────────────
DEV_USER_ID=dev-user-local-001
